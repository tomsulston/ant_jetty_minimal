<project name="site" basedir="." default="compile">
    <path id="class.path">
        <fileset dir="lib">
            <include name="**/*"/>
        </fileset>
    </path>
    <target name="compile">
        <javac srcdir="sources" destdir="classes"
            includes="**/*" includeantruntime="false"
            debug="true" debuglevel="lines,vars,source">
            <classpath refid="class.path"/>
        </javac>
    </target>
    <target name="run" depends="compile">
        <exec executable="pkill">
                 <arg value="-f"/>
                 <arg value="site.Bootstrap"/>
        </exec>
        <java classname="site.Bootstrap" fork="true"
            classpathref="class.path">
            <classpath>
                <pathelement location="classes/"/>
            </classpath>
        </java>
        <sleep seconds="2"/>
    </target>

    <target name="test" depends="run">
        <fail/>
    </target>
</project>
